<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.pgbooking">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.registration.RegistrationActivity" />

        <activity
            android:name=".ui.main.MainActivity" />

        <activity android:name=".ui.firstlogin.UserFirstLoginActivity" />

        <activity android:name=".ui.profile.ProfileActivity" />

        <activity android:name=".ui.pgdetails.RoomDetailsActivity" />

        <activity android:name=".ui.booking.PGBookingActivity" />
    </application>

</manifest>